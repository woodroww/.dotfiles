#!/usr/bin/env python

import sys
import webbrowser
import os
from urllib.parse import quote  

if __name__ == '__main__':
    if len(sys.argv) < 2:
        print("usage: span lookup_word")
    else:
        # mac os
        #chrome_path = 'open -a /Applications/Google\ Chrome.app %s'
        #safari_path = 'open -a /Applications/Safari.app %s'
        # url = "https://www.spanishdict.com/translate/"
        # webbrowser.open(os.path.join(url, sys.argv[1]))

        # google translate url
        url = "https://translate.google.com/"
        # from spanish
        lang = "es"
        from_lang = "sl=" + lang
        # to english
        lang = "en"
        to_lang = "tl=" + lang
        more_url = "?" + from_lang + "&" + to_lang + "&text="
        # translate
        even_more_url = "&op=translate"
        # add the text
        text = sys.argv[1]
        text = quote(text, safe='/')
        whole_url = url + more_url + text + even_more_url
        webbrowser.open(whole_url)
